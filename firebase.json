{
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": [
    {
      "target": "app",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "__/firebase/**/*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "story",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*",
        "__/firebase/**/*",
        "**/node_modules/**"
      ]
    }
  ]
}
